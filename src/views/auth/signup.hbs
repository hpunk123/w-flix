<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Registro de Usuarios</h3>
                    <form class="table-responsive" action="/signup" method="POST">

                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm"><i class="fa fa-address-book-o" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-sm" placeholder="Nombre Completo" name="nombre" autofocus required>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-sm" placeholder="Usuario" name="user" required>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                            <input type="password" class="form-control" aria-label="Sizing example input"
                                aria-describedby="inputGroup-sizing-sm" placeholder="ContraseÃ±a" name="contrasenia" required>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm"><i class="fa fa-area-chart" aria-hidden="true"></i></span>
                            <select class="form-select" name="areafk" id="areafk" required>
                                <option value="" selected>Selecciona Area</option>
                                <option value="1">MEDICINA</option>
                                <option value="2">PSICOLOGIA</option>
                                <option value="3">ENTORNO SOCIAL</option>
                                <option value="4">POLIGRAFIA</option>
                                <option value="5">TOXICOLOGICO</option>
                                <option value="6">INTEGRACION</option>
                                <option value="7">SISTEMAS</option>
                            </select>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm"><i class="fa fa-random"  aria-hidden="true"></i></span>
                            <select class="form-select" name="rolfk" id="rolfk" required>
                                <option value="" selected>Selecciona Rol</option>
                                <option value="1">Administrador</option>
                                <option value="2">Evaluador</option>
                                <option value="3">Supervisor</option>
                                <option value="4">Integrador</option>
                            </select>
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm"><i class="fa fa-trophy" aria-hidden="true"></i></span>
                            <select class="form-select" name="uActivo" id="uActivo" required>                                
                                <option value="1" selected>Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>